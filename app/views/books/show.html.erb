<%= flash[:notice] %>
<br>
<%= render 'users/left', user: @user, new_book: @new_book %>
<div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
                <tr>
                  <td>
                    <%= image_tag @user.get_profile_image(100,100) %>
                    <br>
                    <%= link_to user_path(@user.id) do %>
                    <%= @user.name%>
                    <% end %>
                  </td>
                  <td><%= link_to @book do%>
                        <%= @book.title %>
                      <% end %>
                  </td>
                  <td><%= @book.body %></td>
                  <td>
                    <%=link_to edit_book_path(@book.id) do %>
                      <div class="btn btn-sm btn-success">Edit</div>
                    <% end %>
                  </td>
                  <td>
                    <%=link_to book_path(@book), method: :delete do %>
                    <div class="btn btn-sm btn-danger">Destroy</div>
                    <% end %>
                  </td>
                </tr>
            </tbody>
          </table>
    </div>
    </div>
</div>

