<%= render 'users/left', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
                <tr>
                  <td><%= image_tag @user.get_profile_image(100,100) %></td>
                  <td><%= link_to @book do%>
                        <%= @book.title %>
                      <% end %>
                  </td>
                  <td><%= @book.body %></td>
                  <td><a class="btn btn-sm btn-success" >Edit</a></td>
                  <td><a class="btn btn-sm btn-danger" rel="nofollow" data-method="delete">Destroy</a></td>
                </tr>
            </tbody>
          </table>
    </div>
    </div>
</div>

