<%= render 'users/left', user: @user, new_book: @new_book %>
<div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thread>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thread>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                    <br>
                    <%= link_to user_path(book.user.id) do %>
                    <%= book.user.name%>
                    <% end %>
                  </td>
                  <td><%= link_to book_path(book.id) do%>
                        <%= book.title %>
                      <% end %>
                  </td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
    </div>
</div>